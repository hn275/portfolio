---
import { works } from "../assets/experiences";
import WorkSVG from "../assets/work.svg";
---

<div class="w-full relative">
	<div class="flex flex-col justify-center items-center gap-3">
		<h2 class="text-accent-200 text-3xl font-bold text-center">
			Experiences
		</h2>
	</div>

	<div class="flex flex-col gap-8 mx-auto w-full md:w-max p-10">
		{
			works.map((exp) => (
				<section class="max-w-[65ch] w-full">
					<div class="mb-2 flex justify-between items-center">
						<h2 class="flex gap-1 items-center">
							<span class="text-accent-200 text-2xl font-bold">
								{exp.role}
							</span>
							<span class="">@ {exp.employer}</span>
						</h2>
						<h5 class="text-slate-500 inline-block">
							{exp.duration.start} - {exp.duration.end}
						</h5>
					</div>

					<ul class="pl-5">
						{exp.tasks.map((task) => (
							<li class="list-disc">
								<p>{task}</p>
							</li>
						))}
					</ul>
				</section>
			))
		}
	</div>
	<div>
		<img
			src={WorkSVG.src}
			alt=""
			role="presentation"
			class="hidden md:block absolute top-0 right-0 translate-y-24 w-1/3 opacity-10 -z-10"
		/>
	</div>
</div>
