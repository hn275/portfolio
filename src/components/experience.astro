---
import { works } from "../assets/experiences";
import WorkSVG from "../assets/work.svg";
---

<div class="w-full relative">
    <div class="flex flex-col gap-8 mx-auto w-full md:w-max p-10">
        {
            works.map((exp) => (
                <section class="max-w-[65ch] w-full">
                    <div class="mb-2 text-lg">
                        <h2 class="font-bold">
                            <span class="text-accent-200">{exp.role}</span> @{" "}
                            {exp.employer}
                        </h2>
                        <h5 class="text-slate-500 text-sm">
                            {exp.duration.start} - {exp.duration.end}
                        </h5>
                    </div>
                    <ul class="pl-5">
                        {exp.tasks.map((task) => (
                            <li class="list-disc">
                                <p>{task}</p>
                            </li>
                        ))}
                    </ul>
                </section>
            ))
        }
    </div>
    <div>
        <img
            src={WorkSVG.src}
            alt=""
            role="presentation"
            class="hidden md:block absolute top-0 right-0 translate-y-10 w-1/3 opacity-[0.08] -z-10"
        />
    </div>
</div>

<style>
    section:first-child {
        @apply lg:-translate-x-20;
    }
    section:last-child {
        @apply lg:translate-x-20;
    }
</style>
