---
type Project = {
	title: string;
	github?: string;
	live?: string;
	stack: Array<string>;
};

const { title, github, live, stack } = Astro.props as Project;
---

<div class="w-full p-8 md:max-w-[65ch] bg-slate-900 shadow-xl rounded-lg">
	<div class="flex flex-col gap-3">
		<div class="flex flex-col items-start">
			<h2 class="text-2xl font-bold">{title}</h2>
			<div class="flex items-center justify-center gap-3 text-sm">
				{
					github && (
						<a class="hover:underline" href={github}>
							GitHub
						</a>
					)
				}
				{
					live && (
						<a class="hover:underline" href={live}>
							Live site
						</a>
					)
				}
			</div>
		</div>

		<div>
			<slot />
		</div>

		<ul class="flex gap-2">
			{
				stack.map((s) => (
					<li class="rounded-xl bg-slate-950 px-2 py-1 text-xs">
						{s}
					</li>
				))
			}
		</ul>
	</div>
</div>
