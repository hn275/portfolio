---
import Html from "../layout/html.astro";
import Hero from "../assets/hero.svg";
---

<Html>
    <body class="grid place-items-center">
        <main
            class="py-24 sm:px-6 sm:py-32 lg:px-8 relative h-[100vh] overflow-hidden grid place-items-center"
        >
            <div
                class="relative isolate overflow-hidden px-6 lg:flex lg:gap-x-20 lg:px-24 lg:pt-0 items-center justify-center max-w-5xl"
            >
                <div
                    class="mx-auto max-w-md text-center lg:mx-0 lg:flex-auto lg:py-32 lg:text-left"
                >
                    <h2
                        class="text-3xl font-bold tracking-tight text-white sm:text-4xl"
                    >
                        Hal Nguyen
                    </h2>
                    <p class="mt-6 text-lg leading-8 text-gray-300">
                        Full-stack developer.<br/>
                        Computer Science student.<br/>
                    </p>
                    <div
                        class="mt-10 flex items-center justify-center gap-x-6 lg:justify-start"
                    >
                        <a
                            href="/about"
                            class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
                            >Resume</a
                        >
                        <a
                            href="/about"
                            class="text-sm font-semibold leading-6 text-white"
                            >Get started <span aria-hidden="true">â†’</span></a
                        >
                    </div>
                    <div>
                        external links here
                    </div>
                </div>
                <div class="hidden lg:block w-[60%]">
                    <img src={Hero.src} alt="" />
                </div>
            </div>
            <svg
                viewBox="0 0 1024 1024"
                class="absolute left-1/2 top-1/2 -z-10 h-[64rem] w-[64rem] -translate-y-1/2 [mask-image:radial-gradient(closest-side,white,transparent)] sm:left-full sm:-ml-80 lg:left-1/2 lg:ml-0 lg:-translate-x-1/2 lg:translate-y-0"
                aria-hidden="true"
            >
                <circle
                    cx="512"
                    cy="512"
                    r="512"
                    fill="url(#759c1415-0410-454c-8f7c-9a820de03641)"
                    fill-opacity="0.7"></circle>
                <defs>
                    <radialGradient id="759c1415-0410-454c-8f7c-9a820de03641">
                        <stop stop-color="#6587E4"></stop>
                        <stop offset="1" stop-color="#385593"></stop>
                    </radialGradient>
                </defs>
            </svg>
        </main>
    </body>
</Html>
